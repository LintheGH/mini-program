.album-wall {
  padding: 20rpx;
  background-size: 100%;
  background-position: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 260rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.wall-bg {
  position: absolute;
  left: 0;
  top: -40rpx;
  width: 100%;
  height: 150%;
  z-index: -1;
  filter: blur(20rpx);
}
.wall-bg image {
  width: 100%;
  height: 100%;
}
.album-bg {
  width: 220rpx;
  height: 220rpx;
}
.album-bg image{
  width: 100%;
  height: 100%;
}
.album-info {
  display: flex;
  width: 420rpx;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
}
.album-title {
  height: 100rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 25px;
  margin-left: 10px;
}
.owner {
  height: 60rpx;
  display: flex;
}
.pic-wrap {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 40rpx;
}
.pic-wrap image {
  width: 100%;
  height: 100%;
}
.list-item {
  padding: 20rpx;
  display:flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #e0e0e0;
}
.cover-wrap {
  width: 100rpx;
  height: 100rpx;
}
.cover-wrap image {
  width: 100%;
  height: 100%;
}
.item-info {
  width: 610rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.item-title {
  height: 72rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 36rpx;
  font-size: 24rpx;
}
.play-info {
  display: flex;
  font-size: 24rpx;
  color: #9e9e9e;
}
.play-num {
  padding-left: 36rpx;
}
.play-num:before {
  background-size: 112rpx 110rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.f1c29abf.png);
  background-position: -88rpx -28rpx;
  content: "";
  display: block;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
  width: 24rpx;
}
.time {
  margin-left: 50rpx;
  padding-left: 36rpx;
}
.time:before {
  background-size: 112rpx 110rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.f1c29abf.png);
  background-position: -30rpx -88rpx;
  content: "";
  display: block;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
  width: 24rpx;
}