/* pages/rank/rank.wxss */
.sub-header {
  display: block;
  line-height: 80rpx;
  background-color: #fff;
  color: #000;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 2rpx solid #e0e0e0;
  position: relative;
  height: 80rpx;
  top: 0;
  left: 0;
  right: 0;
}
.album-box {
  padding: 20rpx;
  display: flex;
  height: 260rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #e0e0e0
}
.cover {
  width: 212rpx;
  height: 212rpx;
  margin: 10rpx 6rpx;
  z-index: 0;
  position: relative;
  border-radius: 8rpx;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: 100%;
}
.num {
  bottom: 0;
  right: 0;
  left: 0;
  height: 36rpx;
  line-height: 36rpx;
  position: absolute;
  background: linear-gradient(90deg,transparent,rgba(0,0,0,.02) 30%,rgba(0,0,0,.8));
  border-bottom-right-radius: 8rpx;
}
.num-text {
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 28rpx;
  font-size: 24rpx;
  color: #fff;
}
.num-text::before{
  content: "";
  display: block;
  position: absolute;
  margin: 8rpx 0 6rpx;
  left: 0;
  height: 22rpx;
  width: 26rpx;
  background-size: 112rpx 110rpx;
  background-position: 0 -88rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.f1c29abf.png);
}
.rank-list {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  width: 60%;
}
.list-item {
  width: 100%;
  height: 32rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 26rpx;
  color: #9e9e9e;
}